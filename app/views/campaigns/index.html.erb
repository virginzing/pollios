<section id="widget-grid" class="">
  <div class="jarviswidget jarviswidget-color-blueDark" id="wid-list-campaign" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false">
    <header>
      <span class="widget-icon"> <i class="fa fa-gift"></i> </span>
      <h2><strong>List of Campaign</strong></h2>          
    </header>

    <!-- widget div-->
    <div>
      
      <!-- widget content -->
        <div class="widget-body no-padding">

        <table id="list_campaigns" class="table table-striped table-bordered table-hover" width="100%">
          <thead>
            <tr>
              <th>id</th>
              <th>Poll</th>
              <th>Name</th>
              <th>Photo campaign</th>
              <th>Used</th>
              <th>Chance</th>
              <th>Limit</th>
              <th>Expire</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @campaigns.each do |campaign| %>
              <tr>
                <td><%= campaign.id %></td>
                <td><%= campaign.polls.present? ? campaign.polls.pluck(:title).join(', ') : "-" %></td>
                <td><%= campaign.name %></td>
                <td><%= image_tag(campaign.photo_campaign.url(:thumbnail)) %></td>
                <td><%= campaign.used %></td>
                <td><%= campaign.begin_sample %> in <%= campaign.end_sample %></td>
                <td><%= campaign.limit %></td>
                <td><%= campaign.expire %></td>
                <td><%= link_to 'Show', campaign %></td>
                <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
                <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        </div>
      <!-- end widget content -->
      
    </div>
    <!-- end widget div -->

  </div>
</section>

