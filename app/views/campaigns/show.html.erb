<div class="row">
  <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
    <h1 class="page-title txt-color-blueDark">
      <i class="fa fa-gift fa-fw "></i> 
        Campaign
    </h1>
  </div>
</div>


<div class="well">
<p>
  <strong>Name:</strong>
  <%= @campaign.name %>
</p>

<p>
  <strong>Photo campaign:</strong>
  <%= @campaign.photo_campaign %>
</p>

<p>
  <strong>Used:</strong>
  <%= @campaign.used %>
</p>

<p>
  <strong>Limit:</strong>
  <%= @campaign.limit %>
</p>
</div>


<div class="row">
  <div class="col col-12">
    <div class="jarviswidget" id="wid-id-campaign-<%= @campaign.id %>" 
                data-widget-colorbutton="false" 
                data-widget-colorbutton="false" 
                data-widget-editbutton="false" 
                data-widget-deletebutton="false" 
                data-widget-fullscreenbutton="false" 
                data-widget-custombutton="false">
      <header>
        <h2><strong>Campagin</strong> <i>latest 1-5</i></h2> 
      </header>

      <!-- widget div-->
      <div>
        
        <!-- widget edit box -->
        <div class="jarviswidget-editbox">
          <!-- This area used as dropdown edit box -->
          
        </div>
        <!-- end widget edit box -->
        
        <!-- widget content -->
      <!-- widget content -->
        <div class="widget-body no-padding">

          <table id="member_campagin" class="table table-striped table-bordered table-hover" width="100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Member</th>
                <th>Redeem</th>
                <th>Serial Code</th>
                <th>Luck</th>
                <th>Poll</th>
              </tr>
            </thead>
            <tbody>
              <% @member_campagin.each do |cm| %>
                <tr>
                  <td><%= cm.id %></td>
                  <td><%= cm.member.get_name %></td>
                  <td><%= cm.redeem %></td>
                  <td><%= cm.serial_code %></td>
                  <td><%= cm.luck %></td>
                  <td><%= cm.poll.title %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
        <!-- end widget content -->
        
      </div>
      <!-- end widget div -->
      
    </div>
  </div>
</div>