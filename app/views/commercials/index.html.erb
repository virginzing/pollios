<section id="widget-grid" class="">
  <div class="jarviswidget" id="wid-commercials" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false">
    <header>
      <span class="widget-icon"> <i class="fa fa-building"></i> </span>
      <h2><strong>List of Commercials</strong></h2>          
    </header>

    <!-- widget div-->
    <div>
      
      <!-- widget content -->
        <div class="widget-body no-padding">

          <table id="commercials" class="table table-striped table-bordered table-hover" width="100%">
            <thead>
              <tr>
                <th>ID</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>Joined At</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @commercials.each do |commercial| %>
                <tr>
                  <td><%= commercial.id %></td>
                  <td><%= commercial.get_name %></td>
                  <td><%= commercial.email %></td>
                  <td><span data-livestamp="<%= commercial.created_at.to_i %>"></span></td>
                  <td><%= link_to 'edit', '#' %> | <%= link_to 'Login as', login_as_path(email: commercial.email), method: :post %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      <!-- end widget content -->
      
    </div>
    <!-- end widget div -->

  </div>
</section>