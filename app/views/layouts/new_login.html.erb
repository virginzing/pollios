		<script type="text/javascript">

			$( document ).ajaxStart(function() {
			  NProgress.start();
			}).ajaxSuccess(function() {
			  NProgress.done();
			});

			$.required_login = <%= flash.present? %>;
			var flash_list =  <%= raw manage_flash(flash) %>;

			$.title = flash_list[0];
			$.msg = flash_list[1];
			$.color = flash_list[2];
			$.icon = flash_list[3];

			if($.required_login) {

				$(window).bind("load", function() {
					$.smallBox({
						title : $.title,
						content : $.msg,
						color : $.color,
						timeout: 6000,
						icon : $.icon
					});
				});
			}

			runAllForms();

			$(function() {
				// Validation
				$("#login-form").validate({
					// Rules for form validation
					rules : {
						authen : {
							required : true,
							email : true
						},
						password : {
							required : true,
							minlength : 3,
							maxlength : 20
						}
					},

					// Messages for form validation
					messages : {
						authen : {
							required : 'Please enter your email address',
							email : 'Please enter a VALID email address'
						},
						password : {
							required : 'Please enter your password'
						}
					},

					// Do not change code below
					errorPlacement : function(error, element) {
						error.insertAfter(element.parent());
					}
				});
			});
		</script>
