  <body id="login" class="animated fadeInDown">
    <!-- possible classes: minified, no-right-panel, fixed-ribbon, fixed-header, fixed-width-->
    <header id="header">
      <!--<span id="logo"></span>-->

      <h1 class="logo pull-left">
        <a href="<%= root_url %>" id="logo_link">
          <img id="logo-image" class="logo-image" src="/images/logo/logo.png" alt="Logo">
          <span class="logo-title">POLLIOS</span>
        </a>
      </h1>

<!--       <span id="login-header-space"> <span class="hidden-xs">Already registered?</span> <a href="/users_signin" class="btn btn-danger">Signin</a> </span> -->
    </header>

    <div id="main" role="main">
      <!-- MAIN CONTENT -->
      <div id="content" class="container">

        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7 hidden-xs hidden-sm">
            <h1 class="txt-color-red login-header-big">Pollios</h1>
            <div class="hero">

              <div class="pull-left login-desc-box-l">
                <h1>Raise your hand</h1>
              </div>

              <img src="/smartadmin/img/demo/iphoneview.png" alt="" class="pull-right display-image" style="height:400px">

            </div>

          </div>
          <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
            <div class="well no-padding">
              <form action="/users_resetpassword" id="reset-password-form" class="smart-form client-form" method="post" data-remote="true">
                <header>
                  Reset Password
                </header>

                <fieldset>
                  <input type="password" name="password_reset_token" value="<%= params[:id] %>" class="hidden">
                  <section>
                    <label class="label">Enter your new password</label>
                    <label class="input"> <i class="icon-append fa fa-lock"></i>
                      <input type="password" name="new_password" placeholder="New password" id="new_password">
                      <b class="tooltip tooltip-top-right">Don't forget your password</b></label>
                  </section>

                  <section>
                     <label class="label">Enter confirm your new password</label>
                    <label class="input"> <i class="icon-append fa fa-lock"></i>
                      <input type="password" name="new_password_confirm" placeholder="Confirm password">
                      <b class="tooltip tooltip-bottom-right">Don't forget your password</b> </label>
                  </section>

                </fieldset>
                <footer>
                  <button type="submit" class="btn btn-primary" data-disable-with="Loading...">
                    <i class="fa fa-refresh"></i> Reset Password
                  </button>
                </footer>
              </form>

            </div>

          </div>
        </div>
      </div>

    </div>

