<div class="row">
  <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
    <h1 class="page-title txt-color-blueDark">
      <i class="fa fa-plus fa-fw "></i> 
        Add User To Group
    </h1>
  </div>
</div>

<div class="well">

<h1> Search <span class="semi-bold">Users</span></h1>

<br>
<%= form_tag(company_add_member_path, method: 'get') do %>
  <div class="input-group input-group-lg">
    <input class="form-control input-lg" type="text" name="q" placeholder="Search..." id="search-user">
    <div class="input-group-btn">
      <button type="submit" class="btn btn-default">
        &nbsp;&nbsp;&nbsp;<i class="fa fa-fw fa-search fa-lg"></i>&nbsp;&nbsp;&nbsp;
      </button>
    </div>
  </div>
<% end %>

<h1 class="font-md"> Search Results for <span class="semi-bold">Users</span><!-- <small class="text-danger"> &nbsp;&nbsp;(181 results)</small> --></h1>

<br>

<section id="widget-grid" class="">
  <div class="jarviswidget" id="wid-list-users" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false">
    <header>
      <span class="widget-icon"> <i class="fa fa-user"></i> </span>
      <h2><strong>List Users</strong></h2>          
    </header>

    <!-- widget div-->
    <div>
      
      <!-- widget content -->
        <div class="widget-body no-padding">

          <table id="list_users" class="table table-striped table-bordered table-hover" width="100%">
            <thead>
              <tr>
                <th>#</th>
                <th>Avatar</th>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @members.each do |member| %>
                <tr>
                  <td><%= member.id %></td>
                  <td><%= image_tag(member.avatar.url(:thumbnail), size: '50x50') %></td>
                  <td><%= member.get_name %></td>
                  <td><%= member.email %></td>
                  <td><a href="<%= add_user_to_group_path(member_id: member.id) %>" id="add_user_to_group" class="btn btn-primary" data-remote="true" data-method="post"><i class="fa fa-plus"></i> Add</a></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      <!-- end widget content -->
      
    </div>
    <!-- end widget div -->

  </div>
</section>



</div> <!-- well -->

<script type="text/javascript">
$(document).ready(function () {
  $.add_button_to_group = $('#add_user_to_group[data-remote]');
  
  $.add_button_to_group.on('ajax:send', function(xhr) {
  $("#ajaxLoader").removeClass('fadeOut').addClass('fadeIn').show();
  }).on('ajax:success', function (data, status, xhr) {
    $("#ajaxLoader").removeClass('fadeIn').addClass('fadeOut');
    $(this).addClass('disabled btn-success').html("<i class='fa fa-check'></i> Added")

  }).on('ajax:error', function (event, xhr, status) {
    $("#ajaxLoader").removeClass('fadeIn').addClass('fadeOut');
    var json_response = JSON.parse(xhr.responseText);
    handleErrorAddGroup(json_response.error_message);

  });

  function handleErrorAddGroup (error_message) {
    $.smallBox({
      title : "Warning",
      content: error_message,
      color: "#C46A69",
      icon: "fa fa-warning",
      timeout: 6000
    });
  }

});

</script>
