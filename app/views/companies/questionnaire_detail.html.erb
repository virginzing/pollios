<div class="well">
  <h1 class="text-center">
    <%= @questionnaire.description %>
  </h1>
  
  <div class="summary-questionnaire">
    <h5>Feedback count : <%= @questionnaire.vote_all %></h5>
    <h5>Last updated : <span data-livestamp="<%= @questionnaire.updated_at.to_i %>"></span></h5>
  </div>

  <br>

  <div class="row">
    <table class="table table-striped table-forum">
      <thead>
        <tr>
          <th colspan="1">Question</th>
          <th class="text-center" style="width: 150px;">Average (5)</th>
          <th class="text-center" style="width: 150px;">Percent (100%)</th>
          <th class="text-center" style="width: 150px;">Rating (5)</th>
        </tr>
      </thead>
      <tbody>

        <% @questionnaire.polls.each_with_index do |poll, index| %>
          <tr>
            <td>
              <h4><a href="#">
                <%= poll.title %>
              </a>
                <small>......</small>
              </h4>
            </td>
            <td class="text-center">
              <a href="javascript:void(0);"><%= @questionnaire.sum_average(@array_list[index]) %></a>
            </td>
            <td class="text-center">
              <a href="javascript:void(0);"><%= @questionnaire.percent_average(@array_list[index]) %></a>
            </td>
            <td class="text-center">
              <a href="javascript:void(0);">
                <div class="rating" style="width: 100%; font-size: 10px;">
                  <input type="number" class="rating input-id" data-size="xs" data-readonly="true" data-show-clear="false" data-default-caption="{rating} Rates" data-show-caption="false" data-star-captions="{}" value="<%= @questionnaire.sum_average(@array_list[index]) %>"> 
                </div>
              </a>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

  </div>
</div>