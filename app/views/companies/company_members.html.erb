<div class="row">
  <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
    <h1 class="page-title txt-color-blueDark">
      <i class="fa fa-group fa-fw "></i> 
        List Member
    </h1>
  </div>
</div>


<div class="well">

  <a href="<%= company_search_member_url %>" class="icon-btn">
    <i class="fa fa-search"></i>
    <div>User</div>
  </a>

  <a href="<%= company_new_add_surveyor_url %>" class="icon-btn">
    <i class="fa fa-plus"></i>
    <div>Surveyor</div>
  </a>

  <a href="<%= new_member_to_company_url %>" class="icon-btn">
    <i class="fa fa-plus"></i>
    <div>Member</div>
  </a>

</div>

<section id="widget-grid" class="">
  <div class="jarviswidget" id="wid-company-members" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false">
    <header>
      <span class="widget-icon"> <i class="fa fa-group"></i> </span>
      <h2><strong>Members</strong></h2>          
    </header>

    <!-- widget div-->
    <div>
      
      <!-- widget content -->
        <div class="widget-body no-padding">

          <table id="list_members" class="table table-striped table-bordered table-hover" width="100%">
            <thead>
              <tr>
                <th width="50">#</th>
                <th width="50">Avatar</th>
                <th>Name</th>
                <th>Email</th>
                <th>Group</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @members.each do |member| %>
                <% list_group = [] %>
                <tr>
                  <td><%= member.id %></td>
                  <td><img src="<%= member.avatar.url(:thumbnail_small) %>" alt="user" class="img img-circle img-responsive center-block" data-toggle="tooltip" data-placement="top" title="<%= member.fullname %>"></td>
                  <td><%= member.get_name %></td>
                  <td><%= member.email %></td>
                  <td>
                    <ol>
                    <% (member.groups & group_company).each do |group| %>
                      <% list_group << group.id %>
                      <li><%= link_to group.name, company_group_detail_path(group) %></li>
                    <% end %>
                    </ol>
                  </td>
                  <td><a class="btn btn-default btn-danger" data-confirm="Are you sure?" data-method="delete" href="<%= company_delete_member_path(member_id: member.id, group_id: list_group) %>" rel="nofollow">Delete</a></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      <!-- end widget content -->
      
    </div>
    <!-- end widget div -->

  </div>
</section>


<script type="text/javascript">
  $( document ).ready(function() {
    $('.admin_status').editable({
      showbuttons: false,
      source: [
              {value: 1, text: 'Member'},
              {value: 2, text: 'Admin'}
      ],
      value: function(value) {
        $(this).text(value);
      },
      error: function(response, newValue) {
          if(response.status === 500) {
              return 'Service unavailable. Please try later.';
          } else {
              return response.responseText;
          }
      }
    });

  });
</script>
