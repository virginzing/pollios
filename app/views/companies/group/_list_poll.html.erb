<!-- widget div-->
<div>

  <!-- widget content -->
  <div class="widget-body no-padding">
    <table id="list_default" class="table table-striped table-bordered table-hover" width="100%">
      <thead>
        <tr>
          <th width="50">#</th>
          <th width="50"></th>
          <th width="150">Title</th>
          <th>Vote All</th>
          <th>View All</th>
          <th width="100">Created At</th>
          <th>Qrcode</th>
          <!-- <th>Re-Generate</th> -->
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @polls.each do |poll| %>
          <tr>
            <td><%= poll.id %></td>
            <td><img src="<%= poll.member.avatar.url(:thumbnail_small) %>" alt="user" class="img img-circle img-responsive center-block" data-toggle="tooltip" data-placement="top" title="<%= poll.member.fullname %>"></td>
            <td><%= link_to poll.title, company_group_poll_detail_path(@group, poll) %></td>
            <td><%= poll.vote_all %></td>
            <td><%= poll.view_all %></td>
            <td><%= poll.created_at.strftime("%B %d, %Y") %></td>
            <td><button data-toggle="modal" class="btn btn-primary" data-target="#myModal" onclick="showIFrame('/poll/<%= poll.id %>/qrcode.png', '<%= poll.title %>')">Show</button></td>
<!--                     <td>
              <%= form_tag '/poll/new_generate_qrcode' do %>
                <%= hidden_field_tag 'id', poll.id %>
                <%= submit_tag 'Re new', class: 'btn btn-primary' %>
              <% end %>
            </td> -->
            <td><%= link_to 'Delete', poll_path(poll, member_id: current_member), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <!-- end widget content -->

</div>
<!-- end widget div -->