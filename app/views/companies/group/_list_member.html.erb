<!-- widget div-->
<div>

  <!-- widget content -->
    <div class="widget-body no-padding">

      <table id="list_members" class="table table-striped table-bordered table-hover" width="100%">
        <thead>
          <tr>
            <th width="50">#</th>
            <th width="50">Avatar</th>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Joined at</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @members.each do |member| %>
            <tr>
              <td><%= member.id %></td>
              <td><img src="<%= member.avatar.url(:thumbnail_small) %>" alt="user" class="img img-circle img-responsive center-block" data-toggle="tooltip" data-placement="top" title="<%= member.fullname %>"></td>
              <td><%= member.get_name %></td>
              <td><%= member.email %></td>
              <td><a href="#" class="admin_status" data-type="select" data-pk="<%= member.id %>" data-url="/group/<%= params[:group_id] %>/group_update.json?taker_id=<%= current_member.id %>" data-original-title="Select Status" data-value="<%= member.admin ? 2 : 1 %>"><%= member.is_admin_group(member.admin) %></a></td>
              <td><span data-livestamp="<%= member.joined_at.to_i %>"></span></td>
              <td><a class="btn btn-pill btn-danger" data-confirm="Are you sure?" data-method="delete" href="<%= remove_member_group_path(member_id: member, group_id: params[:group_id]) %>" rel="nofollow">Remove</a></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
<!-- end widget content -->

</div>
<!-- end widget div -->
