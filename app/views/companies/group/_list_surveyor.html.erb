<!-- widget div-->
<div>
  
  <!-- widget content -->
    <div class="widget-body no-padding">

      <table id="list_surveyor" class="table table-striped table-bordered table-hover" width="100%">
        <thead>
          <tr>
            <th width="50">#</th>
            <th width="50">Avatar</th>
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @list_surveyor.each do |member| %>
            <tr>
              <td><%= member.id %></td>
              <td><img src="<%= member.avatar.url(:thumbnail_small) %>" alt="user" class="img img-circle img-responsive center-block" data-toggle="tooltip" data-placement="top" title="<%= member.fullname %>"></td>
              <td><%= member.get_name %></td>
              <td><%= member.email %></td>
              <td><a class="btn btn-default btn-danger" data-confirm="Are you sure?" data-method="delete" href="<%= company_remove_surveyor_path(@group.id, member.id) %>" rel="nofollow">Remove Surveyor</a></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
<!-- end widget content -->
  
</div>
<!-- end widget div -->