<!-- widget div-->
<div>
  
  <!-- widget content -->
    <div class="widget-body no-padding">

      <table id="list_member_request" class="table table-striped table-bordered table-hover" width="100%">
        <thead>
          <tr>
            <th width="50">#</th>
            <th width="50">Avatar</th>
            <th>Name</th>
            <th>Email</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @members_request.each do |member| %>
            <tr>
              <td><%= member.id %></td>
              <td><img src="<%= member.avatar.url(:thumbnail_small) %>" alt="user" class="img img-circle img-responsive center-block" data-toggle="tooltip" data-placement="top" title="<%= member.fullname %>"></td>
              <td><%= member.get_name %></td>
              <td><%= member.email %></td>
              <td><%= link_to 'Approve', '#' %>, <%= link_to 'Deny', '#' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
<!-- end widget content -->
  
</div>
<!-- end widget div -->