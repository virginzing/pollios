<section id="widget-grid" class="">
  <div class="jarviswidget jarviswidget-color-blueDark" id="wid-company-groups" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false">
    <header>
      <span class="widget-icon"> <i class="fa fa-group"></i> </span>
      <h2><strong>Groups</strong></h2>          
    </header>

    <!-- widget div-->
    <div>
      
      <!-- widget content -->
        <div class="widget-body no-padding">

          <table id="company_groups" class="table table-striped table-bordered table-hover" width="100%">
            <thead>
              <tr>
                <th>#</th>
                <th>Photo Group</th>
                <th>Name</th>
                <th>Description</th>
                <th>Member</th>
                <th>Poll</th>
                <th>Created_at</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @groups.each do |group| %>
                <tr>
                  <td><%= group.id %></td>
                  <td><%= image_tag(group.photo_group.url(:thumbnail), size: '50x50') %></td>
                  <td><%= group.name %></td>
                  <td><%= group.description %></td>
                  <td><%= group.member_count %> members <%= link_to "(See More)", company_groups_polls_path(group.id) %></td>
                  <td><%= group.poll_count %> polls <%= link_to "(See More)", company_groups_polls_path(group.id) %></td>
                  <td><span data-livestamp="<%= group.created_at.to_i %>"></span></td>
                  <td>Delete</td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      <!-- end widget content -->
      
    </div>
    <!-- end widget div -->

  </div>
