$.reset_password = <%= raw @reset_password %>;

if ($.reset_password) {
  handleResetPasswordSuccess();
  // redirect_page();
} else {
  handleResetPasswordFail();
}

function handleResetPasswordFail() {
  
  $.smallBox({
    title : "Warning",
    content: "Password reset has expired.",
    color: "#C46A69",
    icon: "fa fa-warning",
    timeout: 12000
  });
}

function handleResetPasswordSuccess() {
  $.smallBox({
    title : "Notice",
    content: "Password has been reset.",
    color: "#739E73",
    icon: "fa fa-check",
    timeout: 2000
  });  
}

function redirect_page() {
  window.location.href="/users_signin"
}
