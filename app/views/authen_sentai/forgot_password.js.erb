$.forgot_password = <%= raw @forgot_password %>;

if ($.forgot_password) {
  handleForgotPasswordSuccess();
} else {
  handleForgotPasswordFail();
}

function handleForgotPasswordFail() {
  
  $("[name=email]").parent().removeClass("state-success").addClass("state-error");

  $.smallBox({
    title : "Warning",
    content: "Email not found.",
    color: "#C46A69",
    icon: "fa fa-warning",
    timeout: 12000
  });
}

function handleForgotPasswordSuccess() {
  // window.location.href="/dashboard"
  $.smallBox({
    title : "Notice",
    content: "Email sent with password reset instructions.",
    color: "#739E73",
    icon: "fa fa-check",
    timeout: 12000
  });
}