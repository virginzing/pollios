$.change_password = <%= raw @change_password || false %>;
var response_message = '<%= @response_message %>';
;

if ($.change_password) {
  handleChangepasswordSuccess();
} else {
  handleChangepasswordError();
}

function handleChangepasswordError() {
  $.smallBox({
    title : "Warning",
    content: response_message,
    color: "#C46A69",
    icon: "fa fa-warning",
    timeout: 6000
  });
}

function handleChangepasswordSuccess() {
  $.smallBox({
    title : "Notice",
    content: response_message,
    color: "#739E73",
    icon: "fa fa-check",
    timeout: 6000
  }); 
}