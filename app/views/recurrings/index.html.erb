<h1>Listing recurrings</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Period</th>
      <th>Status</th>
      <th>End recur</th>
      <td>Use</td>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recurrings.includes(:polls).each do |recurring| %>
      <tr>
        <td><%= recurring.description %></td>
        <td><%= recurring.period %></td>
        <td><span class="label"><%= recurring.status %></span></td>
        <td><%= recurring.end_recur %></td>
        <td><%= recurring.polls.present? ? label_use("Yes") : label_use("No") %></td>
        <td><%= link_to 'Show', recurring %></td>
        <td><%= link_to 'Edit', edit_recurring_path(recurring) %></td>
        <td><%= link_to 'Destroy', recurring, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recurring', new_recurring_path, class: "button" %>
