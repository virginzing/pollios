          <!-- This area used as dropdown edit box -->
          
        </div>
        <!-- end widget edit box -->
        
        <!-- widget content -->
          <div class="widget-body no-padding" style="min-height: 0px;">
            <div class="table-responsive">

              <table class="table" style="margin-bottom: 0px;">
                <thead>
                  <tr>
                    <th>Title</th>
                    <th>Vote All</th>
                    <th>Created at</th>
                  </tr>
                </thead>
                <tbody>
                  <% @poll_latest_list.each do |poll| %>
