                    <td><%= poll.title %></td>
                    <td><%= poll.vote_all %></td>
                    <td><span data-livestamp="<%= poll.created_at.to_i %>"></span></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
              
            </div>
          </div>
        <!-- end widget content -->
        
