<div class="question"><%= @poll.title %></div>
<% unless @poll.get_photo.blank? %>
  <img class="question-image" src="<%= @poll.get_photo %>">
<% end %>
<div class="voter-container">
  <h3 class="header">จำนวนผู้โหวต</h1>
  <h1 id="counter" class="counter" group="<%= @group_public_id %>"><%= @poll.vote_all %></h1>
</div>
<% if @show_close_poll_button %>
  <a class="close-poll" href="<%= @close_poll_url %>">ปิดรับผลโหวต</a>
<% end %>
<a href="https://itunes.apple.com/us/app/pollios/id901397748?ls=1&mt=8" class="link">
  <img src="/images/logo_app_store.png" alt="">
</a>
