<div class="filter-panel">
  <div class="well">
    <section id="filter">
    <h4>Filter Panel</h4>
      <br>
      <div class="filter">
        <div class="btn-group btn-group-justified">
          <a href="<%= collection_feedback_report_path(filter_by: 'today') %>" class="btn btn-default <%= filter_helper('today', 'default') %>">Today</a>
          <a href="<%= collection_feedback_report_path(filter_by: 'yesterday') %>" class="btn btn-default <%= filter_helper('yesterday') %>">Yesterday</a>
          <a href="<%= collection_feedback_report_path(filter_by: 'week') %>" class="btn btn-default <%= filter_helper('week') %>">This Week</a>
          <a href="<%= collection_feedback_report_path(filter_by: 'month') %>" class="btn btn-default <%= filter_helper('month') %>">This Month</a>
        </div>
      </div>

      <div class="filter-other">
        <form action="<%= collection_feedback_report_path %>" method="GET" role="form" class="smart-form">
          <div class="row">
            <label class="label col col-1">Filter Range</label>
            <section class="col col-2">
              <label class="input"> <i class="icon-append fa fa-calendar"></i>
                <input type="text" name="startdate" id="startdate" placeholder="start date">
              </label>
            </section>
            <section class="col col-2">
              <label class="input"> <i class="icon-append fa fa-calendar"></i>
                <input type="text" name="finishdate" id="finishdate" placeholder="finish date">
              </label>
            </section>

            <section class="col col-2">
              <button type="submit" class="btn btn-primary btn-filter">Submit</button>
            </section>

          </div>
        </form>
      </div>          
    </section>
  </div>
</div>

<% array_list = [] %>
<% collection = [] %>
<% number_people_vote = 0 %>

<% @questionnaires.each do |questionnaire| %>
  <% questionnaire.polls.includes(:choices).decorate.each do |poll| %>
    <% array_list << poll.choices.collect!{|e| e.answer.to_i * e.vote.to_f }.reduce(:+).to_f %>
  <% end %>
  <% number_people_vote += questionnaire.vote_all %>
<% end %>

<% p array_list %>
<div class="well">
  <h1 class="text-center">
    <%= @collection.title %>
  </h1>
  
  <h5>Number of votes : <%= number_people_vote %></h5>
  <h5>Last updated : <span data-livestamp="<%= @collection.updated_at.to_i %>"></span></h5>
  <br>

  <div class="row">
    <table class="table table-striped table-forum">
      <thead>
        <tr>
          <th colspan="1">Question</th>
          <th class="text-center" style="width: 150px;">Average (5)</th>
          <th class="text-center" style="width: 150px;">Percent (100%)</th>
          <th class="text-center" style="width: 150px;">Rating (5)</th>
        </tr>
      </thead>
      <tbody>
        <% @questionnaire.polls.decorate.each_with_index do |poll, index| %>
          <tr>
            <td>
              <h4><a href="#">
                <%= poll.title %>
              </a>
                <small>......</small>
              </h4>
            </td>
            <td class="text-center">
              <a href="javascript:void(0);"><%= sum_average(array_list, @questionnaire.polls.to_a.count, number_people_vote, index) %></a>
            </td>
            <td class="text-center">
              <a href="javascript:void(0);"><%= percent_average(array_list, @questionnaire.polls.to_a.count, number_people_vote, index) %> %</a>
            </td>
            <td class="text-center">
              <a href="javascript:void(0);">
                <div class="rating" style="width: 100%; font-size: 10px;">
                  <input type="number" class="rating input-id" data-size="xs" data-readonly="true" data-show-clear="false" data-default-caption="{rating} Rates" data-show-caption="false" data-star-captions="{}" value="<%= sum_average(array_list, @questionnaire.polls.to_a.count, number_people_vote, index) %>"> 
                </div>
              </a>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

  </div>
</div>

<div class="well">
  <h1 class="text-center">
    แยกตามสาขา
  </h1>

  <div class="row">
    <div class="table-responsive">
      <table class="table table-striped table-forum">
        <thead>
          <tr>
            <th>Branch</th>
            <th>Feedback</th>
            <th>Votes</th>
            <% @questionnaire.polls.each do |poll| %>
              <th class="text-center" style="width: 100px;"><%= poll.title %></th>
            <% end %>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @branches.each do |branch| %>
            <tr>
              <td>
                <h4><a href="#">
                  <%= branch.name %>
                </a>
                  <small><%= branch.note %></small>
                </h4>
              </td>
              <td>
                <%= branch.questionnaires.count %>
              </td>

              <td><%= branch.questionnaires.pluck(:vote_all).sum %></td>
              
              <% @questionnaire.polls.each_with_index do |poll, index| %>

                <td class="text-center">
                  <div class="rating" style="width: 100%; font-size: 10px;">
                    <input type="number" class="rating input-id" data-size="xs" data-readonly="true" data-show-clear="false" data-default-caption="{rating} Rates" data-show-caption="false" data-star-captions="{}" value="<%= PollSeries.get_sum_each_poll_in_branch(branch.id, @questionnaire.polls.to_a.count, index) %>"> 
                  </div>
                </td>
              <% end %>

              <td width="20px;"><%= link_to "View More", '#', class: 'btn btn-default btn-pill'%></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>

  </div>

</div>


<script>
  $('#startdate').datepicker({
    dateFormat : 'dd-mm-yy',
    prevText : '<i class="fa fa-chevron-left"></i>',
    nextText : '<i class="fa fa-chevron-right"></i>',
    onSelect : function(selectedDate) {
      $('#finishdate').datepicker('option', 'minDate', selectedDate);
    }
  });

  $('#finishdate').datepicker({
    dateFormat : 'dd-mm-yy',
    prevText : '<i class="fa fa-chevron-left"></i>',
    nextText : '<i class="fa fa-chevron-right"></i>',
    onSelect : function(selectedDate) {
      $('#startdate').datepicker('option', 'maxDate', selectedDate);
    }
  });
</script>