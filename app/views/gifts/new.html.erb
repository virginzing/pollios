<div class="well">
  <h4><b>New Gift</b></h4>
</div>

<div class="well">

  <%= simple_form_for @gift,  :url => gifts_path, :html => { :multipart => true, class: "smart-form", id: "new_gift" } do |f| %>
  <header>
    Select Campaign
  </header>

  <fieldset>
    <section>
      <label class="label">Campaign</label>
        <label class="select">
          <%= f.select :campaign_id, @campaigns.all.map {|r| [ "(" + r.id.to_s + ")" + " " + r.name, r.id ] }, { include_blank: true },  { class: 'select2 required', placeholder: "Select a campaign"} %>
      </label>
    </section>

    <section>
      <label class="label">Message</label>
      <label class="input">
        <%= f.input :message, label: false, required: true, placeholder: "Message will display on list reward" %>
      </label>
    </section>
  </fieldset>



  <header>
    Select Member
  </header>

  <fieldset>
    <section>
    <table id="select_member_company" class="table table-border" width="100%">
      <thead>
        <tr>
          <th width="50">#</th>
          <th width="50">Avatar</th>
          <th>Name</th>
          <th>Email</th>
          <th width="100">Joined at</th>
        </tr>
      </thead>
      <tbody>
        <% Member.with_member_type(:citizen, :celebrity).each do |member| %>
          <tr>
            <td><%= member.id %></td>
            <td><%= image_tag(member.avatar.url(:thumbnail), size: '30x30') %></td>
            <td><%= member.get_name %></td>
            <td><%= member.email %></td>
            <td><span data-livestamp="<%= member.created_at.to_i %>"></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </section>
  </fieldset>

  <footer>
    <button type="submit" class="btn btn-primary" data-disable-with="Loading...">
      Submit
    </button>
    <button type="button" class="btn btn-default" onclick="window.history.back();">
      Back
    </button>
  </footer>
  <% end %>
</div>

<script type="text/javascript">
  $("#new_gift").parsley();
  $(document).ready( function () {
      var list_member = [];
      $('#select_member_company').dataTable({
        retrieve: true,
        responsive: true,
        iDisplayLength: 10,
        order: [[0, 'desc']],
        dom: 'T<"clear">lfrtip',
        tableTools: {
            "sRowSelect": "multi",
            "aButtons": [ "select_all", "select_none" ]
        }
      });

    var table = $('#select_member_company').DataTable();
 
    // $('#select_member_company tbody').on( 'click', 'tr', function () {
    //     $(this).toggleClass('ac');
    // } );
 
    $('#new_gift').submit(function () {
      var member_select = table.rows('.active').data()
      $.each(member_select, function(index, value) {
        list_member.push(value[0]);
      });
      $(this).append(function () {
          return $('<input>', {
              type: 'hidden',
              name: 'campaign_member[list_member]',
              value: list_member
          })
      })
    });
  });
</script>

