<div class="well" style="margin-top: 30px;">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Choice</th>
        <th>Select Group</th>
      </tr>
    </thead>
    <tbody>
      <% @choices.each do |choice| %>
      <tr>
        <td><%= choice.answer %></td>
        <td>
          <select name="choice[<%= choice.id %>]" class="form-control" required="required">
            <option value="">Not select</option>
            <% @groups_system.each do |group| %>
              <option value="<%= group.id %>"><%= group.name %></option>
            <% end %>
          </select>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>