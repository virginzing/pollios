<div class="options_group">
  <span class="note">* Type of group is <u>Public</u> (Don't edit)</span>
  <input type="hidden" name="group[public]" value="true" checked>

  <div class="form-inline" style="margin-top: 10px;">
    <div class="col-md-2">
      <label>Don't Approve</label>
    </div>
    <div class="col-md-10">
      <input type="checkbox" name="group[need_approve]" value="false"/>
    </div>
  </div>

  <% if current_company.company_admin %>
    <div class="form-inline">
      <div class="col-md-2">
        <label>System Group</label>
      </div>
      <div class="col-md-10">
        <input type="checkbox" name="group[system_group]" value="true"/>
      </div>
    </div>
    <div class="form-inline">
      <div class="col-md-2">
        <label>Can leave group</label>
      </div>
      <div class="col-md-10">
        <input type="checkbox" name="group[leave_group]" value="true"/>
      </div>
    </div>
  <% end %>
</div>
