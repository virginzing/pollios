<div class="container">

  <div class="row" style="margin-top: 60px;">

    <div class="col-md-4">
      <div class="well">
        <a href="<%= company_dashboard_path %>" class="btn btn-success btn-lg" style="width: 100%;" id="internal_survey" <%= 'disabled' unless @service.using_service?(Company::SURVEY) %>>
          <i class="fa fa-edit"></i> Internal Survey
        </a>
        <div class="note">For Internal Survey</div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="well">
        <a href="<%= public_survey_dashboard_path %>" class="btn btn-info btn-lg" style="width: 100%;" id="public_survey" <%= 'disabled' unless @service.using_service?(Company::PUBLIC) %>>
          <i class="fa fa-globe"></i> Public Survey
        </a>
        <div class="note">For Public Survey</div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="well">
        <a href="<%= feedback_dashboard_path %>" class="btn btn-danger btn-lg" style="width: 100%;" id="feedback" <%= 'disabled' unless @service.using_service? Company::FEEDBACK %>>
          <i class="fa fa-location-arrow"></i> Feedback Location
        </a>
        <div class="note">For Feedback of Location</div>
      </div>
    </div>

  </div>

</div>
