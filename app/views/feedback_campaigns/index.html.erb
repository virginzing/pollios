<% breadcrumb :feedback_campaigns %>

<div class="well">
  <h1 class="page-header-all">
    <i class="fa fa-gift fa-fw"></i> 
      List Campaign
  </h1>

  <a href="<%= new_feedback_campaign_path %>" class="btn btn-primary">
    <i class="fa fa-plus"></i> Campaign
  </a>

</div>



<section id="widget-grid" class="">
  <div class="jarviswidget jarviswidget-color-blueDark" id="wid-feedback-list-campaign" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false">
    <header>
      <span class="widget-icon"> <i class="fa fa-gift"></i> </span>
      <h2><strong>Campaign</strong></h2>          
    </header>

    <!-- widget div-->
    <div>
      
      <!-- widget content -->
        <div class="widget-body no-padding">

          <table id="list_feedback_campaign" class="table table-striped table-bordered table-hover" width="100%">
            <thead>
              <tr>
                <th width="50">#</th>
                <th>Name</th>
                <th>Description</th>
                <th>How to redeem</th>
                <th>Used</th>
                <th>Limit</th>
                <th>Type</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @campaigns.each do |campaign| %>
                <tr>
                  <td><%= campaign.id %></td>
                  <td><%= link_to campaign.name, feedback_campaign_path(campaign) %></td>
                  <td><%= campaign.description %></td>
                  <td><%= campaign.how_to_redeem %></td>
                  <td><%= campaign.used %></td>
                  <td><%= campaign.limit %></td>
                  <td><%= campaign.type_campaign_text %></td>
                  <td width="150"><%= link_to 'Edit', edit_feedback_campaign_path(campaign), class: 'btn btn-default btn-pill' %> <%= link_to 'Remove', campaign_path(campaign), class: 'btn btn-default btn-pill', method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      <!-- end widget content -->
      
    </div>
    <!-- end widget div -->

  </div>
</section>