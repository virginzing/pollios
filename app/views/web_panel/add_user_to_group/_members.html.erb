<% if @users.present? %>
  <section id="widget-grid" style="margin-top: 30px;">
    <div class="jarviswidget" id="wid-search-user-with-group" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false">
      <header>
        <span class="widget-icon"> <i class="fa fa-users"></i> </span>
        <h2><strong>Result of users</strong></h2>
      </header>
      <!-- widget div-->
      <div>

        <!-- widget content -->
        <div class="widget-body no-padding">
          <table id="add_user_to_group" class="table table-striped table-bordered table-hover" width="100%">
            <thead>
              <tr>
                <th width="30">#</th>
                <th width="50">Avatar</th>
                <th>Name</th>
                <th>Email</th>
                <th width="50">Action</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><img src="<%= user.avatar.url(:thumbnail_small) %>" alt="user" class="img img-circle img-responsive center-block" data-toggle="tooltip" data-placement="top" title="<%= user.fullname %>"></td>
                <td><%= user.get_name %></td>
                <td><%= user.email %></td>
                <td><a href="<%= remote_user_to_group_path(member_id: user.id, group_id: params[:group_id]) %>" id="remote_user_to_group" class="btn btn-primary" data-remote="true" data-method="post"><i class="fa fa-plus"></i> Add</a></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          <!-- end widget content -->
        </div>
        <!-- end widget div -->
      </div>
  </section>
<% end %>
