<div class="row">
  <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
    <h1 class="page-title txt-color-blueDark">
      <i class="fa fa-edit fa-fw "></i> 
        Invite Code 
    </h1>
  </div>
</div>

<div class="well">
  <div class="row">
    <div class="form-group">
      <label class="col-md-2 control-label" for="select-1" style="margin-top: 9px;width: 120px;">Select Method</label>
      <div class="col-md-10">
        <select class="form-control" id="select_method">
          <option value="1">New Company or Team</option>
          <option value="2">Add more invite</option>
        </select> 

      </div>
    </div>
  </div>

  <div class="row">
    <div class="render_form"></div>
  </div>
</div>

<script>
  $('select#select_method').on('change', function() {
    if (this.value == "1") {
      $('.render_form').html("<%= escape_javascript(render partial: 'new_company_form') %>");
    } else {
      $('.render_form').html("<%= escape_javascript(render partial: 'more_invite_form') %>");
    };
  });
  $('.render_form').html("<%= escape_javascript(render partial: 'new_company_form') %>");
</script>