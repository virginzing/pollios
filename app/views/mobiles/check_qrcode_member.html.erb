<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Pollios App Redirect</title>
</head>
<body>
<script src="/mobile/js/browser-deeplink.min.js" type="text/javascript"></script>
<script type="text/javascript">
  var env = '<%= raw Rails.env.development? %>';

  var mobile_url = "http://pollios.com/m/members?key=" + '<%= params[:key] %>';
  var app_url = "Pollios://pollios.com/m/members?key=" + '<%= params[:key] %>';

  if (env) {
    var mobile_url = "http://localhost:3000/m/members?key=" + '<%= params[:key] %>';
    var app_url = "Pollios://localhost:3000/m/members?key=" + '<%= params[:key] %>';
  };

  deeplink.setup({
    iOS: {
        storeUrl: mobile_url
      }
    });

  window.onload = function() {
    deeplink.open(app_url);
    return false;
  }
</script>
</body>
</html>