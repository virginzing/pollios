<div class="" style="margin-top: -20px;">
  <br>
  <div class="well no-padding">
    <form action="/m/authen" method="post" id="login-form" class="smart-form client-form" data-remote="true">
      <header>
        Sign-in with Pollios
      </header>

      <fieldset>
        <section>
          <label class="label">E-mail</label>
          <label class="input"> <i class="icon-append fa fa-user"></i>
            <input type="hidden" name="web_login" value="1">
            <input type="email" name="authen">
            <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Please enter email address</b></label>
        </section>

        <section>
          <label class="label">Password</label>
          <label class="input"> <i class="icon-append fa fa-lock"></i>
            <input type="password" name="password">
            <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Enter your password</b> </label>
<!--           <div class="note">
            <a href="<%= users_forgotpassword_path %>">Forgot password?</a>
          </div> -->
        </section>

        <section>
          <label class="checkbox">
            <input type="checkbox" name="remember_me">
            <i></i>Stay signed in</label>
        </section>
      </fieldset>
      <footer>
        <button type="submit" class="btn btn-primary" id="submit_signin" data-disable-with="Loading..." onclick="">
          Sign-in
        </button>
      </footer>
    </form>

  </div>
              
</div>

<script>
  $( document ).ajaxStart(function() {
    NProgress.start();
  }).ajaxSuccess(function() {
    NProgress.done();
  });

$(function() {
  // Validation
  $("#login-form").validate({
    // Rules for form validation
    rules : {
      authen : {
        required : true,
        email : true
      },
      password : {
        required : true,
        minlength : 3,
        maxlength : 20
      }
    },

    // Messages for form validation
    messages : {
      authen : {
        required : 'Please enter your email address',
        email : 'Please enter a VALID email address'
      },
      password : {
        required : 'Please enter your password'
      }
    },

    // Do not change code below
    errorPlacement : function(error, element) {
      error.insertAfter(element.parent());
    }
  });
});
</script>