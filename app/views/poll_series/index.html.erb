<section id="widget-grid" class="">
  <div class="jarviswidget jarviswidget-color-blueDark" id="wid-list-questionnaire" data-widget-editbutton="false" data-widget-colorbutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false">
    <header>
      <span class="widget-icon"> <i class="fa fa-edit"></i> </span>
      <h2><strong>List of Questionnaire</strong></h2>          
    </header>

    <!-- widget div-->
    <div>
      
      <!-- widget content -->
        <div class="widget-body no-padding">

          <table id="list_polls" class="table table-striped table-bordered table-hover" width="100%">
            <thead>
              <tr>
                <th width="50">#</th>
                <th width="290">Description</th>
                <th>Vote All</th>
                <th>View All</th>
                <th width="150">Expire At</th>
                <th width="200">Created At</th>
                <th>QRCODE</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @poll_series.each do |series| %>
                <tr>
                  <td><%= link_to series.id, "#" %></td>
                  <td><%= series.description %></td>
                  <td><%= series.vote_all %></td>
                  <td><%= series.view_all %></td>
                  <td><%= series.expire_date.strftime("%B %d, %Y") %></td>
                  <td><%= series.created_at %></td>
                  <td><button data-toggle="modal" class="btn btn-primary" data-target="#myModal" onclick="showIFrame('/questionnaire/<%= series.id %>/qrcode.png', '<%= series.description %>')">Show</button></td>
                  <td><!-- <%= link_to 'Edit', edit_poll_series_path(series) , method: :get %> |--> <%= link_to 'Delete', poll_series_path(series), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      <!-- end widget content -->
      
    </div>
    <!-- end widget div -->

  </div>
</section>


